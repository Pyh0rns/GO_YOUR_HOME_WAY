<div class="dashboard-header">
  <div class="header-infos">
    <h1><%= @property.name %></h1>
  </div>
  <div class="d-flex">
    <% if current_user.has_many_properties? %>
      <%= link_to "Changer de propriété", properties_path, class: "btn-dashboard" %>
    <% end %>
    <%= link_to "Ajouter une propriété", new_property_path, class: "btn-dashboard" %>
  </div>
</div>


<%# =============== RECAPITULATIF =============== %>
<div class="dashboard-card dashboard-recap">
  <div class="recap-infos-main">
    <h2>Récapitulatif</h2>
    <div class="recap-infos">
      <p><i class="fa-solid fa-location-dot"></i> <%= @property.address %></p>
      <p>Prix d'achat: <%= @property.buying_price %></p>
      <p>Date d'achat: <%= @property.buying_date %></p>

      <%# A FINIR AVEC VRAIES DONNES - FAIRE MIGRATION %>
      <p>Surface: 90m2</p>
      <p>Nombre de pièces: 4</p>
      <p>ETC: etc etc</p>
    </div>
  </div>
  <div class="recap-map"
    data-controller="map"
    data-map-marker-value="<%= cookies[:marker] %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>

<div class="dashboard-card" style="height:400px">
  <h2>Mes prochaines actions</h2>
  <div class="m-5">
    <p>Voir avec le calendrier</p>
    <p>Voir comment lier properties et companies</p>
    <p>Voir comment faire prise de rdv</p>
    <p>To do list "urgent"</p>
  </div>
</div>

<div class="dashboard-card" style="height:400px">
  <h2>Mes Dépenses</h2>
  <div class="m-5">
    <p>Faire cette rubrique dans la sidebar?</p>
    <p>Prix d'achat: <%= @property.buying_price %></p>
    <p>Frais de Notaire: 10000</p>
    <p>Travaux: 10000</p>
    <p>Matériel: 1000</p>
    <p>Total: 250000</p>
  </div>
</div>



