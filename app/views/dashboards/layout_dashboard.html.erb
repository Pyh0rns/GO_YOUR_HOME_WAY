<div class="dashboard-container">
  <div class="sidebar">
    <ul class="nav-list">
      <li class=<%= params[:action] == "dashboard" ? "tab-active" : "" %>><%= link_to "Home", dashboard_path %></li>
      <li class=<%= params[:action] == "calendar" ? "tab-active" : "" %>><%= link_to "Calendrier", dashboard_calendar_path(property: @property)   %></li>
      <li class=<%= params[:action] == "documents" ? "tab-active" : "" %>><%= link_to "Documents", dashboard_documents_path(property: @property)  %></li>
      <li class=<%= params[:action] == "actions" ? "tab-active" : "" %>><%= link_to "Actions", dashboard_actions_path(property: @property)  %></li>
      <li class=<%= params[:action] == "contacts" ? "tab-active" : "" %>><%= link_to "Contacts", dashboard_contacts_path(property: @property)  %></li>
      <li class=<%= params[:action] == "lists" ? "tab-active" : "" %>><%= link_to "TODO listes", dashboard_lists_path(property: @property)  %></li>
      <li class=<%= params[:action] == "settings" ? "tab-active" : "" %>><%= link_to "Settings", dashboard_settings_path(property: @property)  %></li>
      <li><a href="#">Logout</a></li>


      <li class="dropdown">
        <a href="#" class="dropdown-toggle" onclick="toggleDropdown(event)">Settings</a>
        <ul class="dropdown-menu">
          <li><%= link_to "Ajouter une propriété", new_property_path %></li>
          <li><%= link_to "Modifier la propriété", edit_property_path(@property) %></li>
          <li><%= link_to "Supprimer la propriété", property_path(@property), data: {turbo_method: :delete, turbo_confirm: "Sur?"} %> </li>
          <li><a href="#">Récupérer le pdf complet de l'historique de votre propriété</a></li>
        </ul>
      </li>
    </ul>
  </div>

  <div class="main-content">
    <%= render here %>
  </div>
</div>

<%# A CHANGER !!! %>
<script>
function toggleDropdown(event) {
  event.preventDefault(); // Prevent default link behavior
  const parent = event.target.closest('.dropdown');
  parent.classList.toggle('open'); // Add or remove the "open" class
}</script>
